!!!
%html{ :lang => "pl" }
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "content-type" }
    %script{:src=>"/blip/blip.uploader.rb", :type=>"text/ruby"}
    %script{:type=>"text/ruby"}
      :plain
        require 'application/cache'
        window.cache =  Cache.new(Titanium.Filesystem.getUserDirectory().nativePath());


    %script{:src=>"libs/prototype.js", :type => "text/javascript"}
    - Dir["Resources/libs/**/*.js"].reject{|l| l=~ /scriptaculous|prototype/}.reverse.each do |file|
      %script{:src => file.sub("Resources/",""), :type => "text/javascript"}

    - Dir["Resources/**/*.js"].reject{|l| l=~ /libs|test|image/ }.sort.each do |file|
      %script{:src => file.sub("Resources/",""), :type => "text/javascript"}



    %link{ :href => "app.css", :rel => "stylesheet", :type => "text/css", :media => "screen", :charset => "utf-8" }
  %body
